---
import { Image } from "astro:assets";

const {
  src,
  alt,
  aspectRatio = 16 / 9, // default aspect ratio
  format = 'webp',
  sizes = '100vw',
  loading = 'lazy',
} = Astro.props;

// Calculate dimensions based on aspect ratio and screen width (100vw)
const width = 1280; // base width for generating responsive images
const height = Math.round(width / aspectRatio);
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  format={format}
  sizes={sizes}
  loading={loading}
  style="width: 100%; height: auto; display: block;"
/>